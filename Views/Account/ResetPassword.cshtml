@model ResetPassVM
@{
    Layout = "_MasterAuth";
}
<div class="registration">
    <div class="registration__inner">
        <h1 class="registration__title">Восстановление пароля</h1>
        <div class="registration__form">
            <form asp-action="ChangePass" asp-controller="Account" asp-anti-forgery="true">
                @Html.ValidationSummary(false)
                <label class="subtitle__email-registr">
                    Email
                </label>
                <input asp-for="Email" type="text" class="email__input-registr" id="email" name="Email" />
                <button class="button__registr" type="submit">Восстановить</button>
            </form>
        </div>
    </div>
</div>